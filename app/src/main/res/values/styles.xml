<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <localItem name="colorPrimary">@color/colorPrimary</localItem>
        <localItem name="colorPrimaryDark">@color/colorPrimaryDark</localItem>
        <localItem name="colorAccent">@color/colorAccent</localItem>
    </style>

    <style name="AppTheme.NoActionBar">
        <localItem name="windowActionBar">false</localItem>
        <localItem name="windowNoTitle">true</localItem>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
