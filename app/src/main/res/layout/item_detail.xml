<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_detail"
    style="?android:attr/textAppearanceLarge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:textIsSelectable="true"
    tools:context="com.example.wduello.collectionsmanager.ItemDetailFragment">

    <TextView
        android:text="@string/item_name"
        android:textSize="26sp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"/>

    <!--
    <EditText
        android:inputType="textCapWords"
        android:hint="@string/item_name_edit_text"
        android:textSize="26sp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"/>
    -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/item_image_margin"
        android:maxHeight="@dimen/item_image_height"
        android:maxWidth="@dimen/item_image_width"
        android:minHeight="@dimen/item_image_height"
        android:minWidth="@dimen/item_image_width"
        android:src="@color/colorPrimaryDark"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:layout_below="@+id/imageView"
        android:layout_margin="@dimen/item_detail_margin">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/itemDetailList">

        </ListView>

    </LinearLayout>

</RelativeLayout>