<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.example.wduello.collectionsmanager"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ItemListActivity"
            android:label="@string/title_activity_item"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name=".ItemActivity"
            android:label="@string/title_activity_item"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".dummy.ItemDetailActivity"
            android:label="@string/title_item_detail"
            android:parentActivityName=".dummy.ItemsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".dummy.ItemsActivity"/>
        </activity>
        <activity
            android:name=".dummy.ItemsActivity"
            android:label="@string/title_activity_item"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>
